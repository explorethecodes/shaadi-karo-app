<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        android:id="@+id/id_root_layout"
        android:layout_gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="10dp"
                android:padding="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginRight="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/id_message"
                    android:textStyle="bold"
                    android:text="Something went Wrong !"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/ic_oops"
                    android:layout_marginTop="10dp"
                    android:id="@+id/id_logo_image"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:numStars="5"
                    android:stepSize="1"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/id_reason"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/red_A700"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/id_negative"
                        android:textStyle="bold"
                        android:backgroundTint="@color/grey_20"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textColor="@color/grey_90"
                        android:text="GO BACK"/>

                    <Button
                        android:textStyle="bold"
                        android:id="@+id/id_positive"
                        android:backgroundTint="@color/grey_90"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:text="TRY AGAIN"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>




