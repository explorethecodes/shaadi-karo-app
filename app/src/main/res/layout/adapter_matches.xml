<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="data"
            type="com.fincare.shaadikaro.data.network.api.collection.matches.Person" />
    </data>

    <LinearLayout
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/purple_400"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:visibility="visible"
            app:cardCornerRadius="70dp"
            app:cardElevation="0dp">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:visibility="visible"
                app:cardCornerRadius="70dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="2dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:visibility="visible"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="1dp">
                    <View
                        android:layout_gravity="center"
                        android:elevation="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ImageView
                        tools:background="@color/grey_10"
                        android:id="@+id/id_artist_image"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    tools:text="Kamal Hassan"
                    android:textColor="@color/grey_60"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/id_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    tools:text="Kamal Hassan"
                    android:textColor="@color/grey_60"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/id_gender_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    tools:text="Kamal Hassan"
                    android:textColor="@color/grey_60"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/id_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>